<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ConstraintSet android:id="@+id/start">
        <Constraint
            android:id="@+id/animated"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="90dp"
            android:layout_height="90dp">
            <CustomAttribute
                app:attributeName="backgroundColor"
                app:customColorValue="#FF0000" />

            <CustomAttribute
                app:attributeName="alpha"
                app:customFloatValue="1.0" />

        </Constraint>
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint
            android:id="@id/animated"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="190dp"
            android:layout_height="190dp">
            <CustomAttribute
                app:attributeName="backgroundColor"
                app:customColorValue="#00FF00" />

            <CustomAttribute
                app:attributeName="alpha"
                app:customFloatValue="0.5" />

        </Constraint>
    </ConstraintSet>

    <Transition
        app:constraintSetEnd="@id/end"
        app:constraintSetStart="@+id/start"
        app:duration="4000">
        <OnSwipe
            app:touchAnchorId="@id/animated"
            app:touchAnchorSide="end"
            app:dragDirection="dragEnd" />
    </Transition>
</MotionScene>
